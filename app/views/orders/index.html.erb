<h1>Listing Orders</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th >Options</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.name %></td>
      <td><%= order.address %></td>
      <td><%= order.email %></td>
      <td><%= order.pay_type %></td>
      <td class="options"><%= link_to 'Show', order , class:"btn_show" %>
        <%= link_to 'Edit', edit_order_path(order), class:"btn_edit" %>
      <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn_delete" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<p class="bottom_link">
  <%= link_to 'New Order', new_order_path %>
</p>