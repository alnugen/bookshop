
<h1>Listing Products</h1>
<table>
  <% @products.each do |product| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td>
      <%= image_tag(product.image_url, class: 'list_image') %>
    </td>
    <td class="list_description">
      <dl>
        <dt><%= product.title %></dt>
        <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
      </dl>
    </td>
    <td class="options">
      <%= link_to 'Show', product, class:"btn_show"%>
      <%= link_to 'Edit', edit_product_path(product),class:"btn_edit" %>
      <%= link_to 'Destroy', product, method: :delete,
      data: { confirm: 'Are you sure?' },class:"btn_delete" %>
    </td>
  </tr>
  <% end %>
</table>
<br />
<p class="bottom_link">
  <%= link_to 'New Product', new_product_path, class:"btn_new_product" %>
</p>