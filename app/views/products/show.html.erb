<table>
	<tr>
		<th class="show">Title:</th>
		<td class="show"><%= @product.title %></td>
	</tr>
	<tr>
		<th class="show">Description:</th>
		<td class="show"><%= @product.description %></td>
	</tr>
	<tr>
		<th class="show">Image url:</th>
		<td class="show"><%= image_tag(@product.image_url, class: 'list_image') %></td>
	</tr>
	<tr>
		<th class="show">Price:</th>
		<td class="show"><%= @product.price %></td>
	</tr>
</table>
<p class="bottom_link">
	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
</p>