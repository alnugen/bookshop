<div class="container">
	<p>
		<strong>Title:</strong>
		<%= @product.title %>
	</p>
	<p>
		<strong>Description:</strong>
		<%= @product.description %>
	</p>
	<p>
		<strong>Image url:</strong>
		<%= image_tag(@product.image_url, class: 'list_image') %>
	</p>
	<p>
		<strong>Price:</strong>
		<%= @product.price %>
	</p>
</div>
<p class="bottom_link">
	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
</p>